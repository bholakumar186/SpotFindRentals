<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent Your Parking Space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvRent"
            android:textColor="#132348"
            android:textSize="28dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
        <!-- Owner Name -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietOwnerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Name of Owner"
            android:layout_marginTop="16dp"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@id/tvRent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Phone Number -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:layout_marginTop="16dp"
            android:inputType="phone"
            app:layout_constraintTop_toBottomOf="@id/tietOwnerName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Alternate Number -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietAlternateNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Alternate Number"
            android:layout_marginTop="16dp"
            android:inputType="phone"
            app:layout_constraintTop_toBottomOf="@id/tietPhoneNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- House Name/Number -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietHouseNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="House Name/Number"
            android:layout_marginTop="16dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/tietAlternateNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Street -->

        <!-- Locality -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietStreet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Street"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tietHouseNumber" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietLocality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Locality"
            android:layout_marginTop="16dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/tietStreet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- City -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="City"
            android:layout_marginTop="16dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/tietLocality"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- State -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="State"
            android:layout_marginTop="16dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/tietCity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Pin -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietPin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Pin"
            android:layout_marginTop="16dp"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/tietState"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Landmark -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietLandmark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Landmark"
            android:layout_marginTop="16dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/tietPin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Parking Size -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietParkingSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Parking Size"
            android:layout_marginTop="16dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/tietLandmark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Availability Time -->
       <CheckBox
            android:id="@+id/tietAvailabilityTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="isAvailable"
            android:layout_marginTop="16dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/tietParkingSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Camera Availability -->
        <CheckBox
            android:id="@+id/cbCameraAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera Availability"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tietAvailabilityTime"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Guard Availability -->
        <CheckBox
            android:id="@+id/cbGuardAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guard Availability"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/cbCameraAvailability"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cbGuardAvailability"
            android:text="Choose Location"
            android:backgroundTint="#132348"
            android:textColor="#FFFFFF"
            android:id="@+id/btnLocation"/>

        <!-- Location TextView -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/holo_blue_dark"
            android:clickable="true"
            android:focusable="true"
            android:hint="Location"
            app:layout_constraintTop_toBottomOf="@id/btnLocation"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="24dp"
            android:backgroundTint="#132348"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tvLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

